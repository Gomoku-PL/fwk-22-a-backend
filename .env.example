############################################################
# Example .env for fwk-22-a-backend (GDPR/Cookie compliant)
############################################################

# Server Configuration
PORT=4000
NODE_ENV=development

# Storage Configuration
# Options: 'mongodb' or 'memory'
# Falls back to 'memory' if MongoDB connection fails
STORAGE_TYPE=mongodb
MONGODB_URI=mongodb://localhost:27017/fwk22-gomoku-db
# Allow registration with in-memory storage (dev only)
ALLOW_IN_MEMORY_REGISTRATION=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Data Retention Configuration
RETENTION_CRON_SCHEDULE="0 2 * * *"

# User Data Retention (in days)
USER_RETENTION_INACTIVE_DAYS=1095
USER_RETENTION_DELETED_DAYS=30

# Consent Data Retention (in days)
CONSENT_RETENTION_WITHDRAWN_DAYS=2555
CONSENT_LOGS_RETENTION_DAYS=2555

# Security Events Retention (in days)
SECURITY_EVENTS_RETENTION_DAYS=1095
SECURITY_BREACH_RETENTION_DAYS=2555

# Game Data Retention (in days)
GAME_DATA_RETENTION_DAYS=365
GAME_DATA_ABANDONED_DAYS=90

# Compliance Update Configuration
GDPR_COMPLIANCE_VERSION=2018.1.0
COMPLIANCE_CHECK_SCHEDULE="0 0 1 */3 *"
AUTO_COMPLIANCE_UPDATE=false
COMPLIANCE_NOTIFICATION_DAYS=30

# Local HTTPS Development (optional)
# Set BACKEND_HTTPS=1 to enable HTTPS locally
BACKEND_HTTPS=0
HTTPS_KEY=../dev-setup/certs/localhost-key.pem
HTTPS_CERT=../dev-setup/certs/localhost.pem